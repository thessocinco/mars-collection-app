<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <!-- CheckBox Column -->
        <TextView
            android:id="@+id/checkDeleteColumn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/column_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.1"/>

        <CheckBox
            android:id="@+id/checkDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/checkDeleteColumn"
            app:layout_constraintEnd_toEndOf="@id/checkDeleteColumn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Invoice Number Column -->
        <TextView
            android:id="@+id/rInvoiceNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:gravity="center"
            android:hint="Invoice Number"
            android:background="@drawable/column_border"
            app:layout_constraintStart_toEndOf="@id/checkDeleteColumn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rAmount"
            app:layout_constraintWidth_percent="0.35"/>

        <!-- Invoice Amount Column -->
        <TextView
            android:id="@+id/rAmount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:gravity="center"
            android:hint="Invoice Amount"
            android:background="@drawable/column_border"
            app:layout_constraintStart_toEndOf="@id/rInvoiceNo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rDepartment"
            app:layout_constraintWidth_percent="0.25"/>

        <!-- Department Column -->
        <TextView
            android:id="@+id/rDepartment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:gravity="center"
            android:hint="Department"
            android:background="@drawable/column_border"
            app:layout_constraintStart_toEndOf="@id/rAmount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
