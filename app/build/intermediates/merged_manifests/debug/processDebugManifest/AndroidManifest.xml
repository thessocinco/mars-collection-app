<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marsIT.collection_app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="36" />

    <!-- Permissions Start -->
    <!-- Precise Location (ACCESS_FINE_LOCATION) -->
    <!--
        * For GPS (Global Positioning System)
          * Wi-Fi
          * Cellular networks
          * Bluetooth (for Android 8.0 and higher)
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!--
        * For Wi-Fi
          * Cell tower signals
          * Other network-based methods (like IP address)
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Telephony Permissions -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <!-- This ensures that the app only installs on devices with GPS and SMS capabilities -->
    <!-- Telephony Hardware Feature to enable all the Telephony Permission -->
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <!-- Although the *SdkVersion is captured in gradle build files, this is required for non gradle builds -->
    <!-- <uses-sdk android:minSdkVersion="21"/> -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.marsIT.collection_app.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.marsIT.collection_app.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" /> <!-- Permissions End -->
    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/AppName"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.MarsCollectionApp" >

        <!-- ======================= SMS RECEIVER ADDED HERE ======================= -->
        <receiver
            android:name="com.marsIT.collection_app.ReceiverSMS.SMSDataReceiver"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS" >
            <intent-filter android:priority="99999" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        <!-- ======================= END SMS RECEIVER ======================= -->


        <!-- StartUp should be the launcher -->
        <activity
            android:name="com.marsIT.collection_app.CollectionStartUp.StartUp"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity -->
        <activity
