<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".CollectionData.CollectionPayment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/maintoolbar" />

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:scrollbars="none"
            tools:ignore="NestedScrolling">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="vertical"
                android:stretchColumns="1"
                tools:ignore="ScrollViewSize">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="LIST OF INVOICES"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:columnCount="2"
                    app:orientation="horizontal">

                    <!-- Salesman Name: 2/3 width -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:hint="Salesman Name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:layout_columnWeight="2">

                        <AutoCompleteTextView
                            android:id="@+id/salesmanName"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:inputType="none"
                            android:singleLine="true"
                            android:padding="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Department: 2/3 width -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:hint="Department"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:layout_columnWeight="2">

                        <AutoCompleteTextView
                            android:id="@+id/sDepartment"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:inputType="none"
                            android:singleLine="true"
                            android:padding="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.gridlayout.widget.GridLayout>

                <!-- PR# -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:hint="Enter PR Number"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <AutoCompleteTextView
                        android:id="@+id/prNumber"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="text"
                        android:singleLine="true"
                        android:padding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Customer ID -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:hint="Customer ID"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <AutoCompleteTextView
                        android:id="@+id/customerID"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="none"
                        android:singleLine="true"
                        android:padding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Customer Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:hint="Customer Name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <AutoCompleteTextView
                        android:id="@+id/customerName"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="none"
                        android:singleLine="true"
                        android:padding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Syntax Date/Time -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:hint="Syntax Date/Time"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <AutoCompleteTextView
                        android:id="@+id/syntaxDateTime"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="none"
                        android:singleLine="true"
                        android:padding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Total Amount Due -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Total Amount Due"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/totalAmountDue"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:text="0.00"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="start|center_vertical"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="false"
                        android:padding="8dp"
                        tools:ignore="HardcodedText"/>
                </com.google.android.material.textfield.TextInputLayout>


                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:columnCount="2"
                    app:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutInvoiceDropdown"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2.5dp"
                        android:hint="Invoice List"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:layout_columnWeight="1">

                        <AutoCompleteTextView
                            android:id="@+id/salesmanlist1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:clickable="true"
                            android:ellipsize="none"
                            android:scrollHorizontally="false"
                            android:dropDownHeight="wrap_content"
                            android:textSize="12sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Second Input (Input Invoice as normal text input) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2.5dp"
                        android:hint="Input Invoice"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:layout_columnWeight="1">

                        <EditText
                            android:id="@+id/inputInvoice"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:inputType="none"
                            android:singleLine="true"
                            android:padding="8dp"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.gridlayout.widget.GridLayout>

                <!-- Invoice Amount -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:hint="Invoice Amount"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <EditText
                        android:id="@+id/invoiceAmount"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:padding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Buttons -->
                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    app:columnCount="2">

                    <!-- Add Invoice Button -->
                    <Button
                        android:id="@+id/btnAddInvoice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2.5dp"
                        android:text="Add Invoice"
                        android:background="@drawable/button_bg"
                        android:textColor="@android:color/white"
                        app:layout_columnWeight="1"
                        tools:ignore="HardcodedText" />

                    <!-- Delete Invoice Button -->
                    <Button
                        android:id="@+id/btnDltInvoice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2.5dp"
                        android:text="Delete"
                        android:background="@drawable/button_bg"
                        android:textColor="@android:color/white"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        tools:ignore="HardcodedText" />
                </androidx.gridlayout.widget.GridLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Check Column -->
                        <TextView
                            android:id="@+id/cpCheckBox"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:text="Chk"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/header_border"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintWidth_percent="0.1"/>

                        <!-- Invoice Number -->
                        <TextView
                            android:id="@+id/cpInvoiceNumber"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:text="Invoice Number"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/header_border"
                            app:layout_constraintStart_toEndOf="@id/cpCheckBox"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/cpInvoiceAmount"
                            app:layout_constraintWidth_percent="0.35"/>

                        <!-- Invoice Amount -->
                        <TextView
                            android:id="@+id/cpInvoiceAmount"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:text="Invoice Amt"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/header_border"
                            app:layout_constraintStart_toEndOf="@id/cpInvoiceNumber"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/cpDepartment"
                            app:layout_constraintWidth_percent="0.25"/>

                        <!-- Department -->
                        <TextView
                            android:id="@+id/cpDepartment"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:text="Department"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/header_border"
                            app:layout_constraintStart_toEndOf="@id/cpInvoiceAmount"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintWidth_percent="0.3"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listOfInvoiceRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Total Invoice Amount -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/amt_outline">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Total Invoice Amount"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/totalInvoiceAmount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="end"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:text="LIST OF CATEGORY"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <!-- CATEGORY -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:hint="Category"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Deduction Amount -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:hint="Deduction Amount"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <EditText
                        android:id="@+id/deductionAmount"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:padding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Buttons -->
                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    app:columnCount="2">

                    <!-- Add Deduction Button -->
                    <Button
                        android:id="@+id/btnAddDeduction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2.5dp"
                        android:text="Add Deduction"
                        android:background="@drawable/button_bg"
                        android:textColor="@android:color/white"
                        app:layout_columnWeight="1"
                        tools:ignore="HardcodedText" />

                    <!-- Delete Deduction Button -->
                    <Button
                        android:id="@+id/btnDltDeduction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2.5dp"
                        android:text="Delete"
                        android:background="@drawable/button_bg"
                        android:textColor="@android:color/white"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        tools:ignore="HardcodedText" />
                </androidx.gridlayout.widget.GridLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Checkbox Header -->
                        <TextView
                            android:id="@+id/headerCheck"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:text="Chk"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/header_border"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintWidth_percent="0.1"/>

                        <!-- Category Header -->
                        <TextView
                            android:id="@+id/headerCategory"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:text="Category"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/header_border"
                            app:layout_constraintStart_toEndOf="@id/headerCheck"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintWidth_percent="0.45"/>

                        <!-- Amount Header -->
                        <TextView
                            android:id="@+id/headerAmount"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:text="Amount"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/header_border"
                            app:layout_constraintStart_toEndOf="@id/headerCategory"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintWidth_percent="0.45"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listOfDeductionRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.8dp"
                    android:layout_marginRight="0.8dp" />

                <!-- Total Deduction Amount -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/amt_outline">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Total Deduction Amount"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/totalDeductionAmount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="end"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:text="COLLECTION DETAILS"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <!-- Payment Type -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:hint="Payment Type"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/paymentType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Banks Initial -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutBankInitial"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:hint="Banks Initial"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/bankInitial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Bank Name-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutBankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:hint="Bank Name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <EditText
                        android:id="@+id/bankName"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:padding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Check Number -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutChkNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:hint="Check Number"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <EditText
                        android:id="@+id/chkNumber"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:padding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Payment Amount -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:hint="Payment Amount"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <EditText
                        android:id="@+id/paymentAmount"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:padding="8dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Buttons -->
                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    app:columnCount="2">

                    <!-- Add Payment Button -->
                    <Button
                        android:id="@+id/btnAddPayment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2.5dp"
                        android:text="Add Payment"
                        android:background="@drawable/button_bg"
                        android:textColor="@android:color/white"
                        app:layout_columnWeight="1"
                        tools:ignore="HardcodedText" />

                    <!-- Delete Payment Button -->
                    <Button
                        android:id="@+id/btnDltPayment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2.5dp"
                        android:text="Delete"
                        android:background="@drawable/button_bg"
                        android:textColor="@android:color/white"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        tools:ignore="HardcodedText" />
                </androidx.gridlayout.widget.GridLayout>

                <!-- Collection Details Header -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Checkbox Header -->
                        <TextView
                            android:id="@+id/pCheck"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:text="Chk"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/header_border"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintWidth_percent="0.1"/>

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:text="PType"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/header_border"
                            app:layout_constraintStart_toEndOf="@id/pCheck"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintWidth_percent="0.15"/>

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:text="Bank Initial"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/header_border"
                            app:layout_constraintStart_toEndOf="@id/textView1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintWidth_percent="0.35"/>

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:text="Chk No."
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/header_border"
                            app:layout_constraintStart_toEndOf="@id/textView2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintWidth_percent="0.2"/>

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:text="Amount"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@drawable/header_border"
                            app:layout_constraintStart_toEndOf="@id/textView3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintWidth_percent="0.2"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listOfCollectionsRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.8dp"
                    android:layout_marginRight="0.8dp" />

                <!-- Total Payment Amount -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/amt_outline">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Total Payment Amount"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/totalPaymentAmount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="end"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <!-- Total Balance -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Total Balance"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/totalBalance"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:text="0.00"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="start|center_vertical"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="false"
                        android:padding="8dp"
                        tools:ignore="HardcodedText"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Add Send&Save Button -->
                <Button
                    android:id="@+id/btnSendSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:text="Send and Save"
                    android:background="@drawable/button_bg"
                    android:textColor="@android:color/white"
                    android:elevation="2dp"
                    android:stateListAnimator="@null"
                    android:padding="12dp"
                    android:textSize="16sp"/>
            </TableLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>